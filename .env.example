# Copy to .env and fill in your keys.
# NEVER commit .env to version control.

# OpenAI (required for summarize/query)
OPENAI_API_KEY=sk-REPLACE_ME

# Web search – choose one provider and fill its key
# Option A: Google Custom Search
GOOGLE_API_KEY=
GOOGLE_CX=

# Option B: Brave Search
BRAVE_API_KEY=

# Option C: SerpAPI
SERPAPI_KEY=

# Optional: default OpenAI model
OPENAI_MODEL=gpt-4o-mini

# ── Ollama (local LLM – no API key needed) ──
# Ollama is auto-detected when running on localhost:11434.
# Set LLM_PROVIDER=ollama to force local-only mode.
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b

# Provider preference: "auto" (default), "ollama", or "openai"
# auto = prefer Ollama if running, fall back to OpenAI
LLM_PROVIDER=auto
